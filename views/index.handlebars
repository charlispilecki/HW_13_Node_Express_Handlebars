<a id="add" class="button is-primary ml-4 mt-2">Add Book</a>
<textarea id="new" class="mt-2"></textarea>
<div class="columns mt-3">
    <div class="column is-8 has-text-centered has-background-primary-dark has-text-white">
        <h1 class="title is-2">Unread Books</h1>
        <ul class="is-uppercase">
            {{#each unreadBooks}}
            <li class="mb-2">{{this.book_name}}
                <button onclick="readBook({{this.id}})" class="button is-small is-rounded ml-1">Read It!</button>
                <i class="fas fa-trash-alt" onclick="deleteBook({{this.id}})"></i>
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="column ml-3 is-4 has-text-centered has-background-info has-text-white">
        <h1 class="title is-2">Read Books</h1>
        <ul class="is-uppercase is-italic">
            {{#each readBooks}}
            <li class="mb-2">{{this.book_name}}
                <i class="fas fa-undo mr-1 ml-1" onclick="unreadBook({{this.id}})"></i>
                <i class="fas fa-trash-alt" onclick="deleteBook({{this.id}})"></i>
            </li>
            {{/each}}
        </ul>
    </div>
</div>